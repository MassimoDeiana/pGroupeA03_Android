<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="388dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_interrogationReportFragmentItem_name"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/tv_interrogationReportFragmentItem_firstName"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/tv_interrogationReportFragmentItem_result"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceListItem" />

        <ImageButton
            android:id="@+id/btn_interrogationReportFragmentItem_delete"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@android:color/white"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/trash_icon" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_interrogationReportFragmentItem_message"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:text="message"
        android:textAppearance="?attr/textAppearanceListItem" />
</LinearLayout>