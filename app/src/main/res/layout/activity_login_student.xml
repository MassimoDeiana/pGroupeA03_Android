<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginStudentActivity">

  <EditText
      android:id="@+id/et_loginStudentActivity_mail"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="66dp"
      android:layout_marginTop="100dp"
      android:layout_marginEnd="66dp"
      android:ems="10"
      android:hint="Mail"
      android:inputType="textPersonName"
      android:minHeight="48dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <EditText
      android:id="@+id/et_loginStudentActivity_passwd"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="69dp"
      android:layout_marginTop="44dp"
      android:layout_marginEnd="63dp"
      android:ems="10"
      android:inputType="textPassword"
      android:minHeight="48dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/et_loginStudentActivity_mail"
      tools:ignore="SpeakableTextPresentCheck" />

  <Button
      android:id="@+id/btn_loginStudentActivity_login"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="123dp"
      android:layout_marginTop="136dp"
      android:layout_marginEnd="123dp"
      android:text="Login"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/et_loginStudentActivity_passwd" />

  </androidx.constraintlayout.widget.ConstraintLayout>